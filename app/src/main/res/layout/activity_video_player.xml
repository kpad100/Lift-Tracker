<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VideoPlayerActivity">

    <LinearLayout
        android:id="@+id/videoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/videoLayout"
            app:layout_constraintEnd_toEndOf="@id/videoLayout"
            app:layout_constraintStart_toStartOf="@id/videoLayout"
            app:layout_constraintTop_toTopOf="@id/videoLayout" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/graphLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
    >
        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:layout_marginEnd="25dp"
            android:id="@+id/graph"
            app:layout_constraintBottom_toBottomOf="@+id/graphLayout"
            app:layout_constraintEnd_toEndOf="@+id/graphLayout"
            app:layout_constraintStart_toStartOf="@+id/graphLayout"
            app:layout_constraintTop_toTopOf="@id/graphLayout" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>